@page "/"
@using Microsoft.AspNetCore.Authorization
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Odysseus - Job Application Tracker</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <AuthorizeView>
                <Authorized>
                    <!-- Redirect authenticated users to dashboard -->
                    @{
                        Navigation.NavigateTo("/dashboard", replace: true);
                    }
                </Authorized>
                <NotAuthorized>
                    <div class="bg-primary text-white py-5">
                        <div class="container text-center">
                            <h2 class="display-5 fw-bold mb-4">Job Application Tracker</h2>
                            <div class="row justify-content-center">
                                <div class="col-lg-8">
                                    <div class="d-flex gap-3 justify-content-center flex-wrap mt-4">
                                        <a href="/Account/Register" class="btn btn-light btn-lg px-5 py-3">
                                            <i class="bi bi-person-plus-fill me-2"></i> Create Account
                                        </a>
                                        <a href="/Account/Login" class="btn btn-outline-light btn-lg px-5 py-3">
                                            <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container mb-5 mt-5">
                        <div class="row">
                            <div class="col-lg-6 mb-6">
                                <div class="card-body text-center p-6">
                                    <div class="text-primary mb-3">
                                        <i class="bi bi-briefcase-fill display-4"></i>
                                    </div>
                                    <h5 class="card-title fw-bold">Track Job Applications</h5>
                                    <p class="card-text">
                                        Keep track of your job applications in one place. Record company details,
                                        job roles, application dates, and current status for each application.
                                    </p>
                                </div>

                            </div>
                            <div class="col-lg-6 mb-6">
                                <div class="card-body text-center p-6">
                                    <div class="text-primary mb-3">
                                        <i class="bi bi-briefcase-fill display-4"></i>
                                    </div>
                                    <h5 class="card-title fw-bold">View Statistics</h5>
                                    <p class="card-text">
                                        See your application statistics including total applications,
                                        pending applications, accepted applications, and success rate on your dashboard.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%);
        margin: -1.5rem -15px 0 -15px;
    }

    .text-white-75 {
        color: rgba(255, 255, 255, 0.85) !important;
    }

    .feature-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1) !important;
    }

    .benefit-list .d-flex {
        transition: all 0.2s ease;
    }

    .benefit-list .d-flex:hover {
        background-color: rgba(13, 110, 253, 0.05);
        border-radius: 8px;
        padding: 12px;
        margin: 0 -12px 12px -12px;
    }
</style>
